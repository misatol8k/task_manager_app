<h1>Admin::Users#edit</h1>
<%= form_with(model: [:admin, @user], local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2" %>
    <%= form.text_field :name, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2" %>
    <%= form.text_field :email, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :admin, class: "col-sm-2"  %>
    <%= form.check_box :admin %>
  </div>
  <%= form.hidden_field :password, value: @user.password_digest %>
  <div class="form-group actions">
    <%= form.submit %>
  </div>
<% end %>
