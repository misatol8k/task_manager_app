      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2" %>
    <%= form.text_field :name, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2" %>
    <%= form.text_field :email, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :admin, class: "col-sm-2"  %>
    <%= form.check_box :admin %>
  </div>

  <div class="form-group row">
    <%= form.label :password, class: "col-sm-2" %>
    <%= form.text_field :password, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group row">
    <%= form.label :password_confirmation, class: "col-sm-2" %>
    <%= form.text_field :password_confirmation, class: "form-control col-sm-10" %>
  </div>

  <div class="form-group actions">
    <%= form.submit %>
  </div>
