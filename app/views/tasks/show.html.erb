<% provide(:title, t('view.tasks.show.title')) %>
<p>
  <strong><%= Task.human_attribute_name(:name) %></strong>
  <%= @task.name %>
</p>
<p>
  <strong><%= Task.human_attribute_name(:content) %></strong>
  <%= @task.content %>
</p>
<p>
  <strong><%= Task.human_attribute_name(:created_at) %></strong>
  <%= @task.created_at %>
</p>
<p>
  <strong><%= Task.human_attribute_name(:end_date) %></strong>
  <%= @task.end_date %>
</p>
<%= link_to t('view.index'), tasks_path %>
<%= link_to t('view.edit'), edit_task_path(@task) %>
<%= link_to t('view.destroy'), @task, method: :delete, data: { confirm: t('view.delete_name', name: @task.name)} %>
